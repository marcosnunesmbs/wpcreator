#!/usr/bin/env php
<?php

$root = dirname(__DIR__);

if (! is_file(sprintf('%s/vendor/autoload.php', $root))) {
    $root = dirname(__DIR__, 4);
}

require sprintf('%s/vendor/autoload.php', $root);

use App\Wpcreator\Commands\CreateCpt;
use App\Wpcreator\Commands\CreateWidget;
use App\Wpcreator\Commands\test;
use Symfony\Component\Console\Application;

$application = new Application();

$application->add(new test());
$application->add(new CreateCpt());
$application->add(new CreateWidget());

$application->run();